<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="@{testGoogleMapStreetView}"
    tools:context=".layout.test.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="-42dp">

        <Button
            android:id="@+id/testGoogleMapStreetView"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="街景測試" />

        <Button
            android:id="@+id/testGoogleMapNavigation"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="地點導航測試" />

        <Button
            android:id="@+id/testGoogleMapSearch"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="地點搜尋測試" />

        <Button
            android:id="@+id/testWebsocket"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Websocket測試" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>